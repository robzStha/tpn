<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_catIcon"
        android:src="@drawable/ic_test"
        android:layout_centerVertical="true"/>
    
    <com.official.trialpassnepal.view.TextViewTypeFaced
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space2"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_catIcon"
        android:layout_toLeftOf="@+id/iv_cheveron"
        android:textColor="@android:color/black"
        android:layout_marginRight="@dimen/space2"
        android:text="Category titles"/>

    <ImageView
        android:id="@+id/iv_cheveron"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cheveron_right"
        android:layout_centerVertical="true"/>

</RelativeLayout>